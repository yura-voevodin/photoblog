<main>
    <%= render "layouts/header" %>

    <div class="col-9 mx-auto py-md-5">
        <div class="row fs-5 p-3 bg-light border rounded-3">
            <div class="col">

                <h4>Сімейна прогулянка</h4>

                <div class="row mt-4">
                    <% @photos.each_slice(3) do |slice| %>
                    <div class="col-lg-4 col-md-12 mb-4 mb-lg-0">

                        <% slice.each do |photo| %>
                        <%= image_tag photo['name'], class: "w-100 shadow-1-strong rounded mb-4" %>
                        <% end %>

                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>

    <%= render "layouts/footer" %>
</main>
