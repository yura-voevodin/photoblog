<main>
  <%= render "layouts/header" %>

  <div class="container px-4 py-2" id="custom-cards">

    <% @pages.each_slice(3) do |slice| %>
    <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-2 mb-4">

      <% slice.each do |page| %>
      <div class="col">
        <a href="<%= page[:name] %>">
          <div class="h-100 overflow-hidden rounded-4 shadow-lg">
            <%= image_tag page[:photo], class: "w-100" %>
          </div>
        </a>
      </div>
      <% end %>

    </div>
    <% end %>

  </div>

  <%= render "layouts/footer" %>
</main>
